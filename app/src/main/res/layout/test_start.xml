<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="#f9f9f9"
        app:cardElevation="@dimen/navigation_bar_shadow_radius"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/test_back"
                android:layout_width="@dimen/navigation_bar_height"
                android:layout_height="@dimen/navigation_bar_height"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_back"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Identity Verification"
                    android:textColor="#2a338f"
                    android:textSize="16sp"
                    android:maxLines="1"
                    style="@style/font_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Sum&amp;Substance"
                    android:maxLines="1"
                    android:textColor="#2a338f"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/info_button"
                android:layout_width="@dimen/navigation_bar_height"
                android:layout_height="@dimen/navigation_bar_height"
                android:scaleType="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_info"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxWidth="204dp"
        android:maxHeight="131dp"
        app:srcCompat="@drawable/ss_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/actions"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/test_actions_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/test_promo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:minHeight="80dp"
                android:textColor="#2a338f"
                android:text="The fastest way to onboard your customers"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeMaxTextSize="36sp"
                app:autoSizeTextType="uniform"
                style="@style/font_light"/>

            <FrameLayout
                android:id="@+id/test_language_pick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/test_input_bg"
                >

                <TextView
                    android:id="@+id/test_language_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="50dp"
                    android:textColor="#4a4a4a"
                    android:textSize="18sp"
                    style="@style/font_light"
                    tools:text="English"
                    android:maxLines="1"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="7dp"
                    android:layout_marginRight="28dp"
                    android:layout_gravity="right|center_vertical"
                    app:srcCompat="@drawable/ic_dropdown"/>

            </FrameLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/test_start_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#2a338f"
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Start new check"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/test_continue_existing"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#2a338f"
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/test_continue_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Continue with existing"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/test_liveness_existing"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#01D16C"
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/test_liveness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Liveness check"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/test_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:textColor="#2a338f"
            android:text="Loading..."
            style="@style/font_light"
            android:textSize="36sp"
            android:visibility="gone"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
